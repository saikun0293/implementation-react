<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
</head>

<body>
    


<div class="loginbox">

<div class="logininput">
    <form action="/reset/<%= verifyToken %>" method="POST">
        <div class="inputbox">
            <% if (errors) { %>
              <% if(errors[0].msg !== null) { %>
                <p id="errormessage">
                <%= errors[0].msg %>
            </p>

            <% }  } %>
        </div>
      
      <% if (verified) { %>

      <p id="forgot">Welcome back <br> <b><%= verified.email %>!</b> </p> 
      <% } %> 
      <div class="inputbox">
        <div id="field"><label for="password">Enter New Password</label></div>
        <div id="field"><input type="password" id="password" name="password" placeholder="Enter Password"
        value="<%= typeof password != 'undefined' ? password : '' %>" required></div>
      </div>

      <div class="inputbox">
        <div id="field"><label for="password">Confirm Password</label></div>
        <div id="field"><input type="password" id="password" name="password2" placeholder="Enter Password Again"
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required></div>
      </div>
      <div class="inputbox">
      <button class="submitbutton" type="submit">Change Password</button>
    </div>
    </form>
</div>
</div>


</body>
</html>



